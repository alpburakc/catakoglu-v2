---
import '~/assets/styles/tailwind.css';
import { I18N } from 'astrowind:config';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from '~/components/CustomStyles.astro';
import ApplyColorMode from '~/components/common/ApplyColorMode.astro';
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';

import Analytics from '~/components/common/Analytics.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import ZohoSalesIQ from '~/components/widgets/ZohoSalesIQ.astro';

import { Schema } from 'astro-seo-schema';
import { ViewTransitions } from 'astro:transitions';

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
  metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;
const { language, textDirection } = I18N;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <!-- ================= CORE META ================= -->
    <CommonMeta />
    <Favicons />
    <Metadata {...metadata} />
    <SiteVerification />

    <!-- ================= STYLES ================= -->
    <CustomStyles />
    <ApplyColorMode />

    <!-- ================= SEO SCHEMA ================= -->
    <Schema
      item={{
        '@context': 'https://schema.org',
        '@type': 'Physician',
        name: 'Prof. Dr. Alp Burak Çatakoğlu',
        url: 'https://catakoglu.com',
        telephone: '+905344025050',
        address: {
          '@type': 'PostalAddress',
          streetAddress: 'Ahmet Adnan Saygun C. Canan S. No: 5',
          addressLocality: 'Beşiktaş',
          addressRegion: 'Istanbul',
          addressCountry: 'TR'
        },
        knowsAbout: [
          'Interventional Cardiology',
          'Coronary Angiography',
          'Stent',
          'Structural Heart Interventions'
        ]
      }}
    />

    <Schema
      item={{
        '@context': 'https://schema.org',
        '@type': 'MedicalClinic',
        name: 'Prof. Dr. Alp Burak Çatakoğlu',
        url: 'https://catakoglu.com',
        telephone: '+905344025050',
        medicalSpecialty: 'Cardiology',
        address: {
          '@type': 'PostalAddress',
          streetAddress: 'Ahmet Adnan Saygun C. Canan S. No: 5',
          addressLocality: 'Beşiktaş',
          addressRegion: 'Istanbul',
          addressCountry: 'TR'
        },
        areaServed: {
          '@type': 'City',
          name: 'Istanbul'
        }
      }}
    />

    <!-- ================= VIEW TRANSITIONS ================= -->
    <ViewTransitions fallback="swap" />

    <!-- ================= ANALYTICS (HEAD LAST) ================= -->
    <Analytics />
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <slot />

    <!-- ================= CHAT WIDGET ================= -->
    <!-- MUST be before BasicScripts -->
    <ZohoSalesIQ />

    <!-- ================= GLOBAL SCRIPTS ================= -->
    <BasicScripts />

    <!-- ================= GLOBAL OPTIMIZATIONS ================= -->
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>